{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "rootDir": "./",
        "outDir": "./dist",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ]
    },
    "ts-node": {
        "files": true
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}